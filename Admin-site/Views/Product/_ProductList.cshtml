@using oShopSolution.ViewModels.Catalog.Products;
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;
@model List<ProductView>

@foreach (var item in Model)
{
    <div class="col-xl-4 col-sm-6">
        <div class="product-box">
            <div class="product-img">
                @*<div class="product-ribbon badge bg-warning">
                    Trending
                </div>*@
                <div class="product-like">
                    <a href="#">
                        <i class="mdi mdi-heart-outline"></i>
                    </a>
                </div>
                <img src="@(Configuration["BaseAddress"] + item.ThumbImg)" alt="img-1" class="img-fluid mx-auto d-block">
            </div>

            <div class="text-center">
                <p class="font-size-12 mb-1">@item.Name</p>
                <h5 class="font-size-15"><a href="/product/details/@item.Id" class="text-dark">@item.Name</a></h5>

                <h5 class="mt-3 mb-0">@item.Price $</h5>
            </div>
        </div>
    </div>
}
                   