@{
    ViewBag.Title = "Product";
    ViewBag.pTitle = "Product";
    ViewBag.pageTitle = "Ecommerce";
    Layout = "~/Views/_Shared/_Layout.cshtml";
}
@inject Microsoft.Extensions.Configuration.IConfiguration Configuration;


<!-- ION Slider -->
<link href="~/assets/libs/ion-rangeslider/css/ion.rangeSlider.min.css" rel="stylesheet" type="text/css" />
        <div class="card">
            <div class="card-body">
                <div>
                    <table id="table-product" class="display">
                        <thead>
                            <tr>
                                <th>Id</th>
                                <th>ThumbImg</th>
                                <th>Name</th>
                                <th>Description</th>
                                <th>Price</th>
                                <th>CreateDate</th>
                                <th>Category</th>
                                <th></th>
                            </tr>
                        </thead>
                    </table>
                    </div>
                </div>
            </div>
        </div>
<!-- end row -->
<!-- JAVASCRIPT -->
<script src="~/assets/libs/jquery/jquery.min.js"></script>
<script src="~/assets/libs/bootstrap/js/bootstrap.bundle.min.js"></script>
<script src="~/assets/libs/metismenu/metisMenu.min.js"></script>
<script src="~/assets/libs/simplebar/simplebar.min.js"></script>
<script src="~/assets/libs/node-waves/waves.min.js"></script>
<script src="/js/jquery.twbsPagination.min.js" asp-append-version="true"></script>
<script type="text/javascript" src="/datatable/datatables.min.js"></script>



<!-- Ion Range Slider-->
<script src="~/assets/libs/ion-rangeslider/js/ion.rangeSlider.min.js"></script>

<!-- init js -->
<script src="~/assets/js/pages/product-filter-range.init.js"></script>

<script src="~/assets/js/app.js"></script>


<script type="text/javascript">
    var imageCDN = "@(Configuration["BaseAddress"])";
    $(document).ready(function () {
        $('#table-product').DataTable({
            serverSide: true,
            processing: true,
            ajax: 'product/products',
            columns: [
                { data: 'id' },
                {   
                    data: 'thumbImg',
                    render: function(data, type, row, meta){
                        return "<img width='100px' src='" + imageCDN + data + "'/>";
                    }
                },
                { data: 'name' },
                { data: 'description' },
                { data: 'price' },
                { data: 'createDate' },
                { data: 'category' },
                { 
                    data: null,
                    render: function(data, type, row, meta){
                        return "<a href='/product/details/" + data['id'] + "'>Details</a>"
                    }
                }
            ],
            language: {
                lengthMenu: 'Display <select>' +
                    '<option value="5">5</option>' +
                    '<option value="10">10</option>' +
                    '<option value="15">15</option>' +
                    '<option value="20">20</option>' +
                    '<option value="25">25</option>' +
                    '</select> records'
            },
        });
    });
</script>




